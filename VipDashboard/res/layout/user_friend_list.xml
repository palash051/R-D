<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/application_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llmyexperience"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/value_text"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvFBFriends"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="FB Friends"
            android:background="@drawable/tab_background_selected"
            android:textColor="@color/bottom_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvContacts"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Contacts"
            android:textColor="@color/bottom_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvFBFriends"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:divider="@color/list_diverder"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:scrollbars="vertical"
        android:scrollingCache="false" />
    
    
     <ImageView
            android:id="@+id/facebook_button"
            android:layout_width="64dp"
            android:layout_marginTop="20dp"
            android:layout_height="64dp" 
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:src="@drawable/facebook" 
            android:visibility="gone"/>
    
    

    <TextView
        android:id="@+id/tvfbFriendsListNote"
        android:layout_width="fill_parent"
        android:layout_height="27dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="44dp"
        android:background="@color/bluetextcolor"
        android:gravity="center"
        android:text="We recommend you to sync with Facebook"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/application_background"
            android:orientation="horizontal"
            android:visibility="gone" >
        </FrameLayout>

    <LinearLayout
        android:id="@+id/llBottomAddFriend"
        android:layout_width="fill_parent"
        android:layout_height="28dp"
        android:background="@color/value_text"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvInviteFriends"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text=""
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>