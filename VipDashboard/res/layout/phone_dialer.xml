<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/application_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etExperinceDialer"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:hint="Type a number"
            android:inputType="none"
            android:paddingLeft="5dp"
            android:maxLength="20"
            android:text=""
            android:textColor="@color/sub_header_text"
            android:textSize="15sp" >
        </EditText>

        <TextView
            android:id="@+id/tvExperinceDialerClear"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:background="@color/tabHeaderText"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvExperinceDialerSMS"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/mynet_sms"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvExperinceDialerContact"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/user_icon"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvExperinceDialerPhone"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/mynet_dialer"
            android:gravity="center" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvDialerList"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/tabHeaderText"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:scrollbars="vertical"
        android:scrollingCache="false" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvExperinceDialer1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExperinceDialer2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExperinceDialer3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvExperinceDialer4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExperinceDialer5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExperinceDialer6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvExperinceDialer7"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExperinceDialer8"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExperinceDialer9"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvExperinceDialerStar"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExperinceDialer0"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="0/+"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExperinceDialerHesh"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/feedborder"
            android:gravity="center"
            android:text="#"
            android:textColor="@color/sub_header_text"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvExperinceDialerCall"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/call_dialed"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvExperinceDialerBack"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/mynet_back"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
             />
    </LinearLayout>

</LinearLayout>