<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dp" >
        <ImageView 
            android:id="@+id/ivSMSPersonImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />
        
        <TextView 
            android:id="@+id/tvSMSPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivSMSPersonImage"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="Name/Number"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />
        
        <TextView 
            android:id="@+id/tvSMSDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" 
            android:layout_marginRight="10dp"
            android:text="Date"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp" />
        
        <TextView 
            android:id="@+id/tvSubSMS"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Some SMS text..."
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/ivSMSPersonImage"
            android:layout_below="@+id/tvSMSPersonName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />
        
    </RelativeLayout>

</LinearLayout>
