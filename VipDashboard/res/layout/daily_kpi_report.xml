<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/application_background" >
	<RelativeLayout
        android:id="@+id/rlCollaborationMainTitle"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/header_bar" >

        <TextView
            android:id="@+id/tvCollaborationMainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="Report"
            android:textColor="@color/header_text"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/rlListLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlCollaborationMainTitle" >
        <WebView
        android:id="@+id/dwvSpeedometer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"  />
        <!-- <ListView
            android:id="@+id/lvDailyKPIReportList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@color/list_diverder"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:scrollbars="vertical"
            android:scrollingCache="false" />  -->
    </RelativeLayout>
     <ProgressBar
        android:id="@+id/pbDailyKPI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="29dp"
        android:visibility="gone" />

</RelativeLayout>
