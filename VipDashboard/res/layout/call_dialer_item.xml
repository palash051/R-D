<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivUserGroup"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_icon" />
        <TextView 
            android:id="@+id/tvPhoneNumberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/ivUserGroup"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        <TextView 
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPhoneNumberName"
            android:text=""
            android:layout_marginTop="2dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/ivUserGroup"
            android:layout_marginLeft="10dp" />
        <TextView 
            android:id="@+id/tvPhoneCallDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPhoneNumber"
            android:layout_toRightOf="@+id/ivUserGroup"
            android:layout_marginLeft="10dp"
            android:text=""
            android:layout_marginTop="2dp" 
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>
        <TextView 
            android:id="@+id/tvdistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPhoneCallDate"
            android:layout_toRightOf="@id/ivUserGroup"
            android:layout_marginLeft="10dp"
            android:text=""
            android:layout_marginTop="2dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />
        <ImageView 
            android:id="@+id/ivCallType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_arrow_dialed"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
        <TextView 
            android:id="@+id/tvPhoneCallDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/ivCallType"
            android:text=""
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true" 
            android:textSize="12sp"/>
    </RelativeLayout>
    
</RelativeLayout>
