<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gp5"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/getstartedfive"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/mydevice_new" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Optimize and take care of your devices"
        android:textColor="#FFFFFF" 
        android:textSize="22sp"
        android:textStyle="bold" />

     <Button
        android:id="@+id/gpbtnjoin"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/gpbtnsign"
        android:layout_alignBottom="@+id/gpbtnsign"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/battery_doctor_header"
        android:text="Join now"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/gpbtnsign"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="38dp"
        android:layout_marginRight="20dp"
         android:layout_marginLeft="10dp"
        android:background="@drawable/gp_color"
        android:text="Sign in"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />
    

    <ImageView
        android:id="@+id/getstartedfive"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/gpbtnjoin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:src="@drawable/getstartedfive" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignRight="@+id/getstartedfour"
        android:text="My Device"
        android:textSize="15sp"
        android:textColor="#FFFFFF" />

</RelativeLayout>