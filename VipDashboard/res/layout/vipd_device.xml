<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/application_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="Etisalat"
            android:textColor="#FFF5FF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvCompanyCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvCompanyName"
            android:gravity="right"
            android:text="United Arab Emirates"
            android:textColor="#FFF5FF"
            android:textSize="15sp" />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#9966FF"
        android:layout_marginTop="10dp"
       
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <RelativeLayout 
           android:layout_width="100dp"
          
           android:layout_height="120dp"
           android:background="@drawable/save_power"
           android:layout_marginTop="13dp"
           android:layout_marginLeft="7dp"
           android:layout_marginRight="30dp"
           android:layout_marginBottom="15dp" >
            <TextView 
                android:id="@+id/tvBattery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="normal" />
            <TextView 
                android:id="@+id/tvbatteryPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvBattery"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:textStyle="normal" />
            <TextView 
                android:id="@+id/tvBatteryHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h18m"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_below="@id/tvbatteryPercent"
                android:layout_marginTop="1dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/rlClean"
           android:layout_width="100dp"
           android:layout_height="120dp"
           android:background="@drawable/clean"
            android:layout_marginTop="13dp"
           android:layout_marginBottom="15dp" >
            <TextView 
                android:id="@+id/tvStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="normal" />
            <TextView 
                android:id="@+id/tvStoragePerform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvStorage"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:textStyle="normal" />
            <TextView 
                android:id="@+id/tvFreeStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_below="@id/tvStoragePerform"
                android:layout_marginTop="1dp"
                android:layout_centerHorizontal="true" />
      </RelativeLayout>
 <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9966FF"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlHalpCircle"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:background="@drawable/half_circle" >


            <TextView
                android:id="@+id/tvMemoryPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="normal" />
       
        </RelativeLayout>
        
            <RelativeLayout
            android:id="@+id/rlMemory"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true">
            <TextView 
               android:id="@+id/tvMemory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Memory"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textStyle="normal" />
            </RelativeLayout>
            </LinearLayout>
        
    </LinearLayout>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="We recommend you install following Apps for your safety and best experience of the device"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>
    
    <TextView 
        android:id="@+id/tvMobileSafe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="360 Mobile Safe"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="normal" />
    
    <TextView 
        android:id="@+id/tvMobileSecurity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="360 Mobile Security"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="normal" />
    <TextView 
        android:id="@+id/tvBatteryDoctor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="Battery Doctor"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="normal" />
    <TextView 
        android:id="@+id/tvCleanMaster"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="Clean Master"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="normal" />
    <TextView 
        android:id="@+id/tvAirDroid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="AirDroid"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="normal" />

</LinearLayout>