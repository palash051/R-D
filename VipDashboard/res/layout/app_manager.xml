<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/application_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlHeaderLogo"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="#1D4999" >

        <TextView
            android:id="@+id/tvInstallApps"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Installed apps: "
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUsedSpace"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInstallApps"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Used space: 62%, Remaining space: 374.07M"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="normal" />

        <RelativeLayout
            android:id="@+id/rlManageApp"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_below="@id/tvUsedSpace"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/optimize_border" >

            <LinearLayout
                android:id="@+id/llOptimize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/manage_apps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="Manage Apps"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlInstall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10sp" 
        android:visibility="gone" >

        <ImageView
            android:id="@+id/ivinstallapps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/install_apps" />

        <TextView
            android:id="@+id/tvinstallapps"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivinstallapps"
            android:text="Installation File Manager"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvinstallappssubheader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvinstallapps"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivinstallapps"
            android:text="Easy Installation Package."
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rlUnInstall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10sp" >

        <ImageView
            android:id="@+id/ivUninstallapps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/uninstall_apps" />

        <TextView
            android:id="@+id/tvUninstallapps"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivUninstallapps"
            android:text="System preloaded apps"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvUninstallappssubheader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUninstallapps"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivUninstallapps"
            android:text="Uninstalling system apps requires root privileges."
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

</LinearLayout>