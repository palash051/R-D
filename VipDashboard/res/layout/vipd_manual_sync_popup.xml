<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/application_background"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="Etisalat"
            android:textColor="#FFF5FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvCompanyCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvCompanyName"
            android:gravity="right"
            android:text="United Arab Emirates"
            android:textColor="#FFF5FF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvCompanyCountry"
            android:gravity="right"
            android:text="Manual Sync"
            android:textColor="#FFF5FF"
            android:textSize="18sp" />
    </RelativeLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Basic Phone Information"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
            android:paddingBottom="2dp"
        android:layout_marginTop="5dp" />
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >
        <TextView 
            android:id="@+id/tvShareLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My network and phone details"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:paddingBottom="2dp"
            android:textStyle="normal" />
        <ImageView 
            android:id="@+id/ivShareLocationOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_on"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
               android:paddingBottom="2dp"
            android:layout_marginRight="10dp"/>
        <ImageView 
            android:id="@+id/ivShareLocationOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_off"
               android:paddingBottom="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
             android:visibility="gone" />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp" >
        <TextView 
            android:id="@+id/tvSeeCallHistry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device settings"
            android:textColor="#FFFFFF"
               android:paddingBottom="2dp"
            android:textSize="13sp"
            android:textStyle="normal" />
        <ImageView 
            android:id="@+id/ivSeeCallHistryOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_on"
               android:paddingBottom="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
        <ImageView 
            android:id="@+id/ivSeeCallHistryOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:paddingBottom="2dp"
            android:src="@drawable/switch_off"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
             android:visibility="gone" />
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Network quality"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
            android:paddingBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >
        <TextView 
            android:id="@+id/tvMyDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network quality"
            android:textColor="#FFFFFF"
               android:paddingBottom="2dp"
            android:textSize="13sp"
            android:textStyle="normal" />
        <ImageView 
            android:id="@+id/ivMyDeviceOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_on"
            android:layout_centerVertical="true"
               android:paddingBottom="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
        <ImageView 
            android:id="@+id/ivMyDeviceOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_off"
               android:paddingBottom="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp" >
        <TextView 
            android:id="@+id/tvAnyPromotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify me when there is any promotion"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
               android:paddingBottom="2dp"
            android:textStyle="normal" />
        <ImageView 
            android:id="@+id/ivAnyPromotionOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_on"
               android:paddingBottom="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <ImageView 
            android:id="@+id/ivAnyPromotionOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_off"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
                android:paddingBottom="2dp"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp" >
        <TextView 
            android:id="@+id/tvNotifyincidents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify network incidents"
            android:textColor="#FFFFFF"
                android:paddingBottom="2dp"
            android:textSize="13sp"
            android:textStyle="normal" />
        <ImageView 
            android:id="@+id/ivNotifyIncidentsOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_on"
                android:paddingBottom="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
        <ImageView 
            android:id="@+id/ivNotifyIncidentsOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_off"
                android:paddingBottom="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>
          </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Usage history"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
            android:paddingBottom="2dp"
        android:layout_marginTop="5dp" />
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp" >
        <TextView 
            android:id="@+id/tvSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call and SMS"
                android:paddingBottom="2dp"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/ivCallAndSMSSyncOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
                android:paddingBottom="2dp"
            android:src="@drawable/switch_on" />

        <ImageView 
            android:id="@+id/ivCallAndSMSSyncOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_off"
                android:paddingBottom="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
             android:visibility="gone" />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
            android:paddingBottom="2dp"
        android:layout_marginTop="2dp" >
        <TextView 
            android:id="@+id/tvSyncAppAndData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App and Data"
                android:paddingBottom="2dp"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="normal" />
        <ImageView 
            android:id="@+id/ivAppAndDataOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:paddingBottom="2dp"
            android:src="@drawable/switch_on"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
              android:visibility="gone"
           />
        <ImageView 
            android:id="@+id/ivAppAndDataOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:paddingBottom="2dp"
            android:src="@drawable/switch_off"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    
     <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_marginTop="2dp" >
        <TextView
            android:id="@+id/tvOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sync_page"
            android:gravity="center" />
        </RelativeLayout>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Manual sync helps us to trouble shoot your network and device problem. Still your called number, SMS content, browsing history is not visible to anyone"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="normal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp" />
</LinearLayout>