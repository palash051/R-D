<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/application_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlNetworkMainHeader2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/tool_bar"
        android:orientation="horizontal" >
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTopLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlNetworkMainHeader2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Wifi/Data Usage"
        android:textColor="@color/sub_header_text"
        android:textSize="15sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/WifiDataTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTopLabel"
        android:layout_marginTop="5dp" >

        <include
            android:id="@+id/rlWifiDataTop"
            layout="@layout/vip_wifidata_usage_top" />
    </RelativeLayout>

</RelativeLayout>