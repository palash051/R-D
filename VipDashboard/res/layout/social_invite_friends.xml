<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/application_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvhedertext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Invite your friends to MyNet so they can explore places around the world"
        android:textColor="#000000" />

    <RelativeLayout
        android:id="@+id/rlFacebookButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvhedertext"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/facebookImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook" />

        <TextView
            android:id="@+id/tvfacebooktext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/facebookImage"
            android:text="Facebook"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/ivArow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlLinkedINButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlFacebookButton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/LinkedInImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/linkedin" />

        <TextView
            android:id="@+id/tvflinkedintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/LinkedInImage"
            android:text="LinkedIN"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/ivArow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlGooglePlusButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlLinkedINButton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/GooglePlusImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/google_plus" />

        <TextView
            android:id="@+id/tvGooglePlusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/GooglePlusImage"
            android:text="Google Plus"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/ivArow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llStatisticsSocialAddMember"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlGooglePlusButton"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvAddFriendAndFamily"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Add Friends and Family Members"
            android:textColor="@color/bottom_hometext_color"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvImportAddFriendAndFamily"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Import friends and family and personal information fromâ€¦"
            android:textColor="@color/bottom_hometext_color"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llSocialMedia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.facebook.widget.LoginButton
                android:id="@+id/authButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="2dp" />

            <ImageView
                android:id="@+id/google_plus"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:src="@drawable/google_plus" />

            <ImageView
                android:id="@+id/linkedIn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/linkedin" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/social_dot_three" />
    
    <ProgressBar
        android:id="@+id/pbStatisticsSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="29dp"
        android:visibility="gone" />

</RelativeLayout>