<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.mynet.app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/application_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlDeshboardReportTitle"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/header_bar">   

        <TextView
            android:id="@+id/tvDeshboardReportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:text="Subscriber Performance Indicator"
            android:textColor="@color/header_text"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llDeshBoardLayout"
        android:layout_below="@+id/rlDeshboardReportTitle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtExperienceView"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@color/sub_header_text"
            android:gravity="center"
            android:text="Service Types"
            android:textColor="@color/bottom_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDashboardMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="Update as of "
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="10dp"
            android:paddingRight="10dp" >
            
            
        <LinearLayout           
            android:id="@+id/llTextHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#89BA17"           
            android:orientation="horizontal">
           
            <TextView 
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:text="Service Type"/>
            <TextView 
                android:layout_width="110px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="3sp"
                android:text="Originating"/>
            <TextView 
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="3sp"
                android:text="Terminating"/>

            <TextView
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:paddingLeft="9sp"
                android:text="Duration"
                android:textColor="#000"
                android:textSize="12sp" />
            
        </LinearLayout>
        
        
        <LinearLayout           
            android:id="@+id/llSMSRow"
            android:layout_below="@+id/llTextHeader"
            android:layout_width="fill_parent"
            android:layout_height="40px"
            android:background="#DAE7CC"           
            android:orientation="horizontal">
           
            <TextView 
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text="SMS"/>
            <TextView 
                android:id="@+id/tvSMSOriginating"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text=""/>
            <TextView 
                 android:id="@+id/tvSMSTerminating "
                android:layout_width="110px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text=""/>

            <TextView
                 android:id="@+id/tvSMSDuration "
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:text=""
                android:textColor="#000"
                android:textSize="12sp" />
            
        </LinearLayout>
        
        <LinearLayout           
            android:id="@+id/llMMSRow"
            android:layout_below="@+id/llSMSRow"
            android:layout_width="fill_parent"
            android:layout_height="40px"
            android:background="#EDF3E7"           
            android:orientation="horizontal">
           
            <TextView 
               
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text="MMS"/>
            <TextView 
                 android:id="@+id/tvMMSOriginating"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text=""/>
            <TextView 
                 android:id="@+id/tvMMSTerminating "
                android:layout_width="110px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text=""/>

            <TextView
                 android:id="@+id/tvMMSDuration "
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:text=""
                android:textColor="#000"
                android:textSize="12sp" />
            
        </LinearLayout>
        
        
        <LinearLayout           
            android:id="@+id/llVideoCallRow"
            android:layout_below="@+id/llMMSRow"
            android:layout_width="fill_parent"
            android:layout_height="40px"
            android:background="#DAE7CC"           
            android:orientation="horizontal">
           
            <TextView 
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text="Video Call"/>
            <TextView 
                 android:id="@+id/tvVideoCallOriginating"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text=""/>
            <TextView 
                 android:id="@+id/tvVideoCallTerminating "
                android:layout_width="110px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text=""/>

            <TextView
                android:id="@+id/tvVideoCallDuration "
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:text=""
                android:textColor="#000"
                android:textSize="12sp" />
            
        </LinearLayout>
        
        <LinearLayout           
            android:id="@+id/ll2GRow"
            android:layout_below="@+id/llVideoCallRow"
            android:layout_width="fill_parent"
            android:layout_height="40px"
            android:background="#EDF3E7"           
            android:orientation="horizontal">
           
            <TextView 
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text="2G"/>
            <TextView 
                 android:id="@+id/tv2GOriginating"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text=""/>
            <TextView 
                 android:id="@+id/tv2GTerminating "
                android:layout_width="110px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text=""/>

            <TextView
                 android:id="@+id/tv2GDuration "
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:text=""
                android:textColor="#000"
                android:textSize="12sp" />
            
        </LinearLayout>
            
            
            <LinearLayout           
            android:id="@+id/ll3GRow"
            android:layout_below="@+id/ll2GRow"
            android:layout_width="fill_parent"
            android:layout_height="40px"
            android:background="#DAE7CC"           
            android:orientation="horizontal">
           
            <TextView 
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text="3G"/>
            <TextView 
                 android:id="@+id/tv3GOriginating"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text=""/>
            <TextView 
                android:id="@+id/tv3GTerminating "
                android:layout_width="110px"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="5sp"
                android:text=""/>

            <TextView
                 android:id="@+id/tv3GDuration "
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:text=""
                android:textColor="#000"
                android:textSize="12sp" />
            
        </LinearLayout>
            
        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/ivHomepageFooter"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:contentDescription="HomeService"
        android:src="@drawable/dashboard_footer" />
</RelativeLayout>