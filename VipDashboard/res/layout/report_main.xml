            android:layout_height="30dp"
            android:background="@color/sub_header_text"
            android:gravity="center"
            android:text="Dashboard"
            android:textColor="@color/bottom_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
