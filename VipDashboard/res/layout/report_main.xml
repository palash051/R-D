                    android:id="@+id/bReportVoice"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/speedo_30"
                    android:contentDescription="JIJI" /> -->
                <com.vipdashboard.app.customcontrols.GaugeView
                    android:id="@+id/bReportVoice"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tvReportVoiceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bReportVoice"
                    android:layout_centerHorizontal="true"
                    android:text="Voice"
                    android:textColor="@color/sub_header_text"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvReportVoiceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvReportVoiceTitle"
                    android:layout_centerHorizontal="true"
                    android:text="30"
                    android:textColor="@color/value_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />
