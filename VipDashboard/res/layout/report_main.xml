                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tvReportDataTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bReportData"
                    android:layout_centerHorizontal="true"
                    android:text="Data"
                    android:textColor="@color/sub_header_text"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvReportDataValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvReportDataTitle"
                    android:layout_centerHorizontal="true"
                    android:text="55"
                    android:textColor="@color/value_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlReportSMS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <!-- <ImageView
                    android:id="@+id/bReportSMS"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/speedo_24"
                    android:contentDescription="JIJI" /> -->
                
                <com.vipdashboard.app.customcontrols.GaugeView
                    android:id="@+id/bReportSMS"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tvReportSMSTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bReportSMS"
                    android:layout_centerHorizontal="true"
                    android:text="SMS"
                    android:textColor="@color/sub_header_text"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvReportSMSValue"
