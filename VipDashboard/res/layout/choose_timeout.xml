<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choose_yourmode"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@drawable/battery_doctor_header"
        android:gravity="center"
        android:text="Timeout"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/HeaderShow"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/battery_doctor_divider" />

    <RelativeLayout
        android:id="@+id/ivfifteenSecondMode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="15s"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivfifteenSecondActive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_active"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivfifteenSecondDeactive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_deactive" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ivthirtySecondMode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/tvTimeout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="30s"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivthirtySecondActive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_active"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivthirtySecondDeactive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_deactive" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ivoneMinutsMode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/tvData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1m"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivoneMinutsActive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_active"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivoneMinutsDeactive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_deactive" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ivtwoMinutsMode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2mins"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivtwoMinutsActive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_active"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivtwoMinutsDeactive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_deactive" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ivtenMinutsMode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="10mins"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivtenMinutsActive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_active"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivtenMinutsDeactive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_deactive" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ivthirtyMinutsMode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="30mins"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivthirtyMinutsActive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_active"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivthirtyMinutsDeactive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mode_deactive" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/battery_doctor_header"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rlCancle"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#808080" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>