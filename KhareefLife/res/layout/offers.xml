<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rlKhareefoffer"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#4091FF"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Khareef"
            android:textColor="@color/khareeftextcolor"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_marginLeft="105dp"
            android:text="Live!"
            android:textColor="@color/livetextcolor"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <WebView
        android:id="@+id/webviewoffer"
        android:layout_width="fill_parent"
        android:layout_below="@+id/rlKhareefoffer"
        android:layout_height="fill_parent" />

</RelativeLayout>