<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llActionMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical" >

    <RelativeLayout
        android:id="@+id/rlActionMenuHome"
        android:layout_width="48dp"
        android:layout_height="36dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/ivMenuHome"
            android:layout_width="27dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tab_home" 
            android:contentDescription="@string/todo"/>

        <com.shopper.app.custom.controls.CustomTextView
            android:id="@+id/tvMenuHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMenuHome"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
           
            android:text="@string/skan_product"
            android:textColor="#9d8baf"
            android:textSize="10sp"
            android:textStyle="bold" 
           />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlActionMenuBasket"
        android:layout_width="48dp"
        android:layout_height="36dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/ivMenuBasket"
            android:layout_width="27dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tab_basket" 
            android:contentDescription="@string/todo"/>

        <com.shopper.app.custom.controls.CustomTextView
            android:id="@+id/tvMenuBasketCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/badge_circle"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="11sp"
            android:visibility="gone" />

        <com.shopper.app.custom.controls.CustomTextView
            android:id="@+id/tvMenuBasketTitle"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/menu_basket_title"
            android:textColor="#9d8baf"
            android:textSize="10sp"
            android:textStyle="bold"
            
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ivMenuBasket"
            />
    </RelativeLayout>

</LinearLayout>